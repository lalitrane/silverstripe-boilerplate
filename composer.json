{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "Silverstripe Boilerplate with Galactic theme and useful Add-ons",
    "require": {
        "php": "^8.1",
        "silverstripe/recipe-plugin": "~2.0.0@stable",
        "silverstripe/vendor-plugin": "~2.0.0@stable",
        "silverstripe/recipe-cms": "~5.0.0@stable",
        "silverstripe/login-forms": "~5.0.0@stable",
        "silverstripe/spamprotection": "^4.0",
        "undefinedoffset/silverstripe-nocaptcha": "^2.4",
        "silverstripe/blog": "^4.0",
        "webmen/silverstripe-webp-images": "^2.0",
        "silverstripe/userforms": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "themes/galactic/css",
            "themes/origami/javascript",
            "themes/origami/images"
     
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
